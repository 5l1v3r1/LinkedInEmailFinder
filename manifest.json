{
  "manifest_version": 2,

  "name": "LinkedInEmailFinder",
  "description": "",
  "version": "1.0",

  "browser_action": {
    "name": "Manipulate DOM",
    "default_icon": "email_check.png",
    "default_popup": "popup.html",
    "default_title": "Visit LinkedIn and use Rapportive to find email IDs"
  },
   "icons": { 
            "16": "email_check.png",
            "48": "email_check.png",
            "128": "email_check.png" 
          },
  "permissions": [
                   "storage",
                   "tabs",
	         	   "notifications",
		   		   "https://ajax.googleapis.com/*",
 		   		   "unlimitedStorage"
                 ],
	"background": {
	         	"scripts": [ "moment.min.js","jquery-2.1.1.min.js","background.js"],
                        "persistent": false
	              },	
  "content_scripts": [ {
    "js": [ "jquery-2.1.1.min.js", "content.js"],
    "matches": [ "http://localhost:4000/*", "https://*/*"]
  }],
  "options_page": "options.html",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
